cabal-version:   3.4
name:            tasty-documentation-test
version:         0.0.1.0
synopsis:
  A Tasty plugin that renders a personalised summary of your tests

license:         BSD-3-Clause
license-file:    LICENSE
author:          ThÃ©ophile Choutri
maintainer:      theophile@choutri.eu

category:        Testing
build-type:      Simple
extra-doc-files: CHANGELOG.md

common warnings
  ghc-options: -Wall

library
  import:           warnings
  exposed-modules:
    Test.Tasty.DocumentationTest
    Test.Tasty.DocumentationTest.Types
    Test.Tasty.DocumentationTest.Internal

  build-depends:
      base ^>=4.17.1.0
    , tasty
    , filepath ==1.4.100.3
    , exceptions
    , containers
    , text
    , tasty-hunit
    , prettyprinter
  hs-source-dirs:   src
  default-language: GHC2021

test-suite tasty-report-test
  import:           warnings
  default-language: GHC2021

  -- other-modules:
  -- other-extensions:
  type:             exitcode-stdio-1.0
  hs-source-dirs:   test
  main-is:          Main.hs
  build-depends:
    , base          ^>=4.17.1.0
    , tasty-report
